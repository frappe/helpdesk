{
	"compilerOptions": {
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2022",
		"module": "esnext",
		"moduleResolution":"bundler",
		"jsx": "preserve",
		"paths": {
			"@/*": ["./src/*"]
		},
		"types": [
			"vite/client"
		],
	},
	"extends":["frappe-ui/tsconfig.base.json"],
	"include": ["src","src/*","src/**/*.d.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx","src/**/*.vue"],
	"exclude": ["node_modules"]
}
